{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "A beautiful and customizable Pomodoro timer for productivity",
  "homepage": "https://github.com/AnalogGhost/pomodoro-timer",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnalogGhost/pomodoro-timer.git"
  },
  "bugs": {
    "url": "https://github.com/AnalogGhost/pomodoro-timer/issues"
  },
  "author": "Matt Brown <perfect-pomodoro@hackerapps.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --no-sandbox --enable-logging",
    "dev-debug": "electron . --no-sandbox --enable-logging --remote-debugging-port=9222",
    "watch": "node dev.js",
    "build": "npm run build-release",
    "build-release": "./build.sh",
    "build-all": "electron-builder --linux --win --mac",
    "clean": "rm -rf dist/",
    "build-linux-all": "electron-builder --linux",
    "build-linux": "electron-builder --linux",
    "build-windows": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-appimage": "electron-builder --linux appimage",
    "build-deb": "electron-builder --linux deb",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "chokidar": "^4.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1"
  },
  "build": {
    "appId": "com.perfectpomodoro.app",
    "productName": "Perfect Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "history.html",
      "history-renderer.js",
      "history-styles.css",
      "settings.html",
      "settings-renderer.js",
      "settings-styles.css",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "description": "A beautiful and customizable Pomodoro timer for productivity",
      "maintainer": "Your Name <your.email@example.com>"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "canvas": "^3.2.0"
  }
}
